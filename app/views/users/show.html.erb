<h1><%= @user.name %>のページ</h1>
<p>メールアドレス: <%= @user.email %></p>

<table class="table">
  <thead>
  <tr>
    <th>タスク名</th>
    <th>内容</th>
    <th>投稿時間</th>
    <th>期限</th>
    <th>ステータス</th>
    <th>優先順位</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @user.tasks.each do |task| %>
    <tr class="task_row">
      <th><%= task.title %></th>
      <th><%= task.content %></th>
      <td><%= task.created_at.strftime('%Y/%m/%d %H:%M')%></td>
      <td><%= task.dead_line.strftime('%Y/%m/%d %H:%M')%></td>
      <th><%= task.status %></th>
      <th><%= task.priority %></th>
    </tr>
  <% end %>
  </tbody>
</table>