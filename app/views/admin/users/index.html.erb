<h1>管理画面のユーザー　一覧画面だよ！</h1>
<% @users.each do |user| %>
<div class="text-center">
  <h3>ユーザー名:<%=link_to user.name, admin_user_path(user.id) %></h3>
  <p>タスクの作成数:<%= user.tasks.count %></p>

  <%= link_to 'ユーザー編集画面', edit_admin_user_path(user.id) , class: 'btn btn-success' %>
  <%= link_to 'ユーザーを削除する', admin_user_path(user.id), class: 'btn btn-danger',
                                  method: :delete, data: { confirm: 'Are you sure to delete this user?'} %>
</div>
<% end %>