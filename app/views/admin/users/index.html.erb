<h1>管理画面のユーザー　一覧画面だよ！</h1>
<table class="table">
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>ユーザー名</th>
      <th>ユーザーのタスク作成数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="task_row">
        <td>ユーザー名:<%=link_to user.name, admin_user_path(user.id) %></td>
        <td>タスクの作成数:<%= user.tasks.count %></td>
        <td><%= link_to t('link_to.models.admin_user.show'), edit_admin_user_path(user.id) , class: 'btn btn-info' %></td>
        <td><%= link_to t('link_to.models.admin_user.delete'), admin_user_path(user.id), class: 'btn btn-danger',
                        method: :delete, data: { confirm: 'Are you sure to delete this user?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
