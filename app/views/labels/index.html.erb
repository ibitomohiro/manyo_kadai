<p id="notice"><%= notice %></p>

<h1>Labels</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.name %></td>
        <td><%= link_to 'ラベル一覧', label, class: 'btn btn-info' %></td>
        <td><%= link_to 'ラベル編集', edit_label_path(label), class: 'btn btn-warning' %></td>
        <td><%= link_to 'ラベルの削除', label, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Label', new_label_path, class: 'btn btn-primary' %>
