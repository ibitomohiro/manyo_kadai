<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= link_to '#', task %></td>
      <td><%= link_to '#', edit_task_path(task) %></td>
      <td><%= link_to '#', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'create new task', new_task_path %>