<p id="notice"><%= notice %></p>

<h1><%= t('view_title.models.task.index') %> </h1>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<%= link_to "投稿順にソートする", tasks_path(sort_expired: "false") %>

<table>
  <thead>
  <tr>
    <th><%= t('activerecord.attributes.task.title') %></th>
    <th><%= t('activerecord.attributes.task.content') %></th>
    <th>Deadline</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tasks.each do |task| %>
    <tr class="task_row">
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= task.dead_line.strftime('%Y/%m/%d %H:%M')%></td>
      <td><%= link_to t('link_to.models.task.show'), task_path(task.id) %></td>
      <td><%= link_to t('link_to.models.task.edit'), edit_task_path(task.id), data: {confirm: 'Are you sure to edit task?'} %></td>
      <td><%= link_to t('link_to.models.task.delete'), task_path(task.id), method: :delete, data: { confirm: 'Are you sure to delete task?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to t('link_to.models.task.new'), new_task_path %>