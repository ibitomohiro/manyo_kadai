<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= link_to 'Task詳細', task_path(task.id) %></td>
      <td><%= link_to 'Task 編集', edit_task_path(task.id), data: {confirm: 'Are you sure to edit task?'} %></td>
      <td><%= link_to 'delete', task_path(task.id), method: :delete, data: { confirm: 'Are you sure to delete task?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'create new task', new_task_path %>