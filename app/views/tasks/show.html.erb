<h1>Task詳細画面</h1>
<div class="show_path">
  <h4><%=t('activerecord.attributes.task.title') %>: <%= @task.title %></h4>
  <h4><%=t('activerecord.attributes.task.content') %>:<%= @task.content %></h4>
  <h4><%=t('activerecord.attributes.task.created_at') %>:<%=@task.created_at.strftime('%Y/%m/%d %H:%M')%></h4>
  <h4><%=t('activerecord.attributes.task.dead_line') %>:<%= @task.dead_line.strftime('%Y/%m/%d %H:%M') %></h4>
  <h4><%=t('activerecord.attributes.task.status') %>:<%= @task.status %></h4>
  <h4><%=t('activerecord.attributes.task.priority') %>:<%=@task.priority %></h4>
  <h4>登録ラベル:
  <% @task.labels.each do |label| %>
    <%=label.name %>
  <% end %>
  </h4>
  <%= link_to t('link_to.models.task.back'), tasks_path, class:'btn btn-danger' %>
</div>
